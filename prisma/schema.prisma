generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id         String   @id @default(cuid())
  reference  String   @unique
  appliance  String
  fullName   String
  email      String
  phone      String
  university String?
  residence  String?
  months     Int
  notes      String?
  emailed    Boolean  @default(false)
  createdAt  DateTime @default(now())
}
